const net = require('net');

const IP_ADDRESS = '127.0.0.1';
const PORT_NUMBER = 3000; 

const client = new net.Socket();

// Lidhja me serverin
client.connect(PORT_NUMBER, IP_ADDRESS, () => {
  console.log('Lidhja u krijua me serverin');

  // Kerkesa:Read
  client.write('user1 read');

  // Lexon pergjigjen nga serveri
  client.on('data', (data) => {
    console.log(`Përgjigja nga serveri: ${data}`);
  });

  // Dergon mesazh
  client.write('Ky është një mesazh nga klienti.');

  //Mbyllet lidhja
  client.end();
});


client.on('close', () => {
  console.log('Lidhja u mbyll nga serveri');
});

