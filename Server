<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WebSocket Client</title>
</head>
<body>
  <script>
    const serverPort = 3000;
    const serverAddress = 'ws://127.0.0.1:' + serverPort;

    const ws = new WebSocket(serverAddress);

    ws.addEventListener('open', () => {
      console.log('Connected to the server');
    });

    ws.addEventListener('message', (event) => {
      const message = event.data;
      console.log(`Received message from server: ${message}`);

      //Logjika e  client-side bazuar ne mesazhin e marrur nga serveri

      //Per shembull, nese kerkesa eshte te lexohet nje fajll specifik
      if (message.startsWith('Server: READ_FILE:')) {
        const fileName = message.split(':')[2];
        if (clientHasPermission(ws, fileName)) {
          console.log(`Server: File content for ${fileName}`);
        } else {
          console.log(`Server: Permission denied for ${fileName}`);
        }
      } else {
        // Per kerkesa tjera
        console.log('Server: Message received');
      }
    });

    ws.addEventListener('close', () => {
      console.log('Connection closed');
    });

    //Logjika e client-side per te derguar nje mesazh tek serveri
    function sendMessageToServer(message) {
      ws.send(message);
    }

    sendMessageToServer('Client: Hello, Server!');

    // Lista e klienteve qe kane qasje te plote (client-side)
    const clientsWithFullAccess = [];

    function clientHasPermission(client, fileName) {
      //Logjika e client-side per te kontrolluar qasjen e klientit per nje fajll specifik
      return clientsWithFullAccess.includes(client);
    }
  </script>
</body>
</html>
